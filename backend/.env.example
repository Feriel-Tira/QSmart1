# ========== ENVIRONMENT ==========
# development, production
NODE_ENV=development

# ========== DATABASE ==========
# URL MongoDB - Docker
MONGODB_URI=mongodb://mongo:27017/smartqueue_db
# URL MongoDB - Local (localhost)
MONGODB_DEV_URI=mongodb://localhost:27017/smartqueue_db

# ========== SERVICES PORTS ==========
API_GATEWAY_PORT=4000
QUEUE_SERVICE_PORT=4001
TICKET_SERVICE_PORT=4002
USER_SERVICE_PORT=4003
ANALYTICS_SERVICE_PORT=4004
NOTIFICATION_SERVICE_PORT=4005

# ========== INTER-SERVICE URLS (Docker) ==========
# Utilisées quand déployé en Docker
QUEUE_SERVICE_URL=http://queue-service:4001
TICKET_SERVICE_URL=http://ticket-service:4002
USER_SERVICE_URL=http://user-service:4003
ANALYTICS_SERVICE_URL=http://analytics-service:4004
NOTIFICATION_SERVICE_URL=http://notification-service:4005

# ========== LOCAL DEV URLS (localhost) ==========
# Utilisées en développement local
QUEUE_SERVICE_URL_LOCAL=http://localhost:4001
TICKET_SERVICE_URL_LOCAL=http://localhost:4002
USER_SERVICE_URL_LOCAL=http://localhost:4003
ANALYTICS_SERVICE_URL_LOCAL=http://localhost:4004
NOTIFICATION_SERVICE_URL_LOCAL=http://localhost:4005

# ========== SECURITY ==========
# Clé secrète JWT - À CHANGER EN PRODUCTION
JWT_SECRET=your_super_secret_key_change_in_production_12345
# Durée d'expiration du token
JWT_EXPIRY=24h

# ========== CORS ==========
# Origines autorisées
CORS_ORIGIN=http://localhost:*,http://127.0.0.1:*

# ========== LOGGING ==========
# debug, info, warn, error
LOG_LEVEL=debug

# ========== NOTIFICATION ==========
NOTIFICATION_EMAIL_FROM=noreply@smartqueue.com
NOTIFICATION_SMS_ENABLED=false
NOTIFICATION_EMAIL_ENABLED=true

# ========== REDIS (optionnel pour cache futur) ==========
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false
